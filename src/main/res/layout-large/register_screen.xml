<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background"
	tools:context=".RegisterScreen"
	tools:layout_editor_absoluteY="25dp">

	<Button
		android:id="@+id/btnRegister"
		android:layout_width="0dp"
		android:layout_height="49dp"
		android:layout_alignParentTop="true"
		android:layout_marginStart="24dp"
		android:layout_marginEnd="24dp"
		android:layout_marginBottom="17dp"
		android:background="@drawable/buttonshape"
		android:backgroundTint="@color/fbBlue"
		android:text="REGISTER"
		android:textColor="#ffffff"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@+id/linearLayout"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txtConfirmPw" />

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="0dp"
		android:layout_height="118dp"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btnRegister">

		<CheckBox
			android:id="@+id/tickbox"
			android:layout_width="wrap_content"
			android:layout_height="39dp"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center"
			android:buttonTint="@color/white"
			android:text="By checking this box, you agree to our"
			android:textColor="@color/white"
			tools:layout_editor_absoluteX="82dp"
			tools:layout_editor_absoluteY="564dp" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/linkTermsOfUse"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentBottom="true"
				android:layout_gravity="center"
				android:fontFamily="@font/robotobold"
				android:text="Terms of Use  "
				android:textColor="@color/fbBlue"
				tools:layout_editor_absoluteX="89dp"
				tools:layout_editor_absoluteY="622dp" />

			<TextView
				android:id="@+id/signIntxt3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@+id/linkTermsOfUse"
				android:layout_centerHorizontal="true"
				android:layout_gravity="center"
				android:fontFamily="@font/robotolight"
				android:text="and"
				android:textColor="@color/white"
				tools:layout_editor_absoluteX="195dp"
				tools:layout_editor_absoluteY="622dp" />

			<TextView
				android:id="@+id/linkPrivacyPolicy"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@+id/linkTermsOfUse"
				android:layout_alignEnd="@+id/tickbox"
				android:layout_gravity="center"
				android:fontFamily="@font/robotobold"
				android:text="  Privacy Policy"
				android:textColor="@color/fbBlue"
				tools:layout_editor_absoluteX="238dp"
				tools:layout_editor_absoluteY="622dp" />


		</LinearLayout>

		<TextView
			android:id="@+id/lblLogin"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center"
			android:text="Already have an account?"
			android:textColor="@android:color/background_light"
			tools:layout_editor_absoluteX="117dp"
			tools:layout_editor_absoluteY="651dp" />


		<TextView
			android:id="@+id/linkLogin"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_gravity="center"
			android:layout_toEndOf="@+id/linkTermsOfUse"
			android:fontFamily="@font/robotobold"
			android:text="Login"
			android:textColor="@color/fbBlue"
			tools:layout_editor_absoluteX="188dp"
			tools:layout_editor_absoluteY="681dp" />
	</LinearLayout>

	<ImageView
		android:id="@+id/imgJabberLogo"
		android:layout_width="215dp"
		android:layout_height="205dp"
		android:layout_marginTop="29dp"
		android:layout_marginBottom="24dp"
		android:src="@drawable/appicon"
		app:layout_constraintBottom_toTopOf="@+id/txtFEmail"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<EditText
		android:id="@+id/txtFEmail"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="24dp"
		android:layout_marginEnd="24dp"
		android:layout_marginBottom="8dp"
		android:backgroundTint="#fff"
		android:digits="0123456789@._ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
		android:ems="10"
		android:fontFamily="@font/robotolight"
		android:hint="Email"
		android:inputType="textEmailAddress"
		android:textColor="@android:color/background_light"
		app:layout_constraintBottom_toTopOf="@+id/txtUsername"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imgJabberLogo" />

	<EditText
		android:id="@+id/txtUsername"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="24dp"
		android:layout_marginEnd="24dp"
		android:layout_marginBottom="7dp"
		android:backgroundTint="#fff"
		android:digits="0123456789@._ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
		android:ems="10"
		android:fontFamily="@font/robotolight"
		android:hint="Username"
		android:inputType="textEmailAddress"
		android:maxLength="12"
		android:textColor="@android:color/background_light"
		app:layout_constraintBottom_toTopOf="@+id/txtPassword"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txtFEmail" />

	<EditText
		android:id="@+id/txtPassword"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="24dp"
		android:layout_marginEnd="24dp"
		android:layout_marginBottom="21dp"
		android:backgroundTint="#fff"
		android:digits="0123456789@._ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
		android:ems="10"
		android:fontFamily="@font/robotolight"
		android:hint="Password"
		android:inputType="textPassword"
		android:textColor="@android:color/background_light"
		app:layout_constraintBottom_toTopOf="@+id/txtConfirmPw"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txtUsername" />

	<EditText
		android:id="@+id/txtConfirmPw"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="24dp"
		android:layout_marginEnd="24dp"
		android:layout_marginBottom="24dp"
		android:backgroundTint="#fff"
		android:digits="0123456789@._ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
		android:ems="10"
		android:fontFamily="@font/robotolight"
		android:hint="Confirm Password"
		android:imeOptions="actionGo"
		android:inputType="textPassword"
		android:textColor="@android:color/background_light"
		app:layout_constraintBottom_toTopOf="@+id/btnRegister"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txtPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>
