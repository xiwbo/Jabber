<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".GroupChat"
	tools:layout_editor_absoluteY="81dp">

	<ScrollView
		android:id="@+id/scrollView2"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="11dp"
		android:layout_marginEnd="8dp"
		android:layout_marginBottom="20dp"
		app:layout_constraintBottom_toTopOf="@+id/groupBtnSend"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:id="@+id/layout1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/groupTxtMessages"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="TextView" />
		</LinearLayout>
	</ScrollView>

	<EditText
		android:id="@+id/groupTextField"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="21dp"
		android:layout_marginEnd="18dp"
		android:ems="10"
		android:fontFamily="@font/robotolight"
		android:hint="Enter text here!"
		android:inputType="textPersonName"
		app:layout_constraintBaseline_toBaselineOf="@+id/groupBtnSend"
		app:layout_constraintEnd_toStartOf="@+id/groupBtnSend"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/groupBtnSend"
		android:layout_width="0dp"
		android:layout_height="43dp"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="32dp"
		android:background="@drawable/buttonshape"
		android:text="SEND"
		android:textColor="@color/white"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/groupTextField"
		app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>